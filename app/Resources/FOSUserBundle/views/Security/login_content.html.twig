{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-horizontal col-md-offset-3 col-md-8 col-sm-offset-3 col-sm-8" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label class="col-sm-2 control-label" for="username">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="password">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-6">
            <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-default" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
        </div>
    </div>
</form>