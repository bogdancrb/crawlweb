{% trans_default_domain 'FOSUserBundle' %}

<div class="title-element">
    <strong>Register</strong>
</div>

<div class="center-element">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'),
        'attr': {'class': 'fos_user_registration_register form-horizontal col-md-offset-3 col-md-8 col-sm-offset-3 col-sm-8'}}) }}

        {% form_theme form _self %}

        {% block _register_user_row %}
            <div class="form-group">
                {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(form.email) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.username, null, { 'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(form.username) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.plainPassword.first, null, { 'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(form.plainPassword.first) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.plainPassword.second, null, { 'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-6">
                    {{ form_widget(form.plainPassword.second) }}
                </div>
            </div>
        {% endblock %}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default" onclick="location.href='../../wordpress'" type="button">Back</button>
                <button class="btn btn-default" type="submit">{{ 'registration.submit'|trans }}</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>