{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block title %}CrawlWeb.info Admin - Inspector{% endblock %}
{% block page_title %}Inspector{% endblock %}
{% block page_subtitle %}Template configurator{% endblock %}

{% block page_content %}
    <div id="container">
        {%  if error_msg is defined %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <h4><i class="icon fa fa-warning"></i> Error:</h4>
                {{ error_msg }}
            </div>
        {% endif %}

        <div id="frm">
            <form action="proxy/confirm" method="post" style="margin-bottom:0;">
                <div class="input-group input-group-lg">
                    <input class="form-control" name="url" type="text" autocomplete="off" placeholder="http://" value="{{ url }}">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info btn-flat">Go!</button>
                    </span>
                </div>
            </form>
        </div>
    </div>

    <br><br><br>

    <div id="footer">
        Powered by <a href="//www.php-proxy.com/" target="_blank">PHP-Proxy</a> {{ version }}
    </div>

    <script type="text/javascript">
    </script>
{% endblock %}